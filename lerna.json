{
  "packages": [
    "packages/*"
  ],
  "version": "0.1.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--frozen-lockfile"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    }
  }
}